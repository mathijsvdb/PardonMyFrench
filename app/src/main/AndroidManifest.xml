<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mathijs.pardonmyfrench">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BaseActivity" />
        <activity android:name=".MainActivity">
        </activity>
        <activity
            android:name=".LoginActivity" >
            <!-- To not be able to return after login -->
            <!--android:finishOnTaskLaunch="true">-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".AddWordActivity"
            android:label="Add word" />
        <activity
            android:name=".EditWordActivity"
            android:label="Edit word" />
        <activity android:name=".DetailActivity" />
        <activity
            android:name=".ProfileActivity"
            android:label="My profile" />
        <activity
            android:name=".SettingsActivity"
            android:label="Settings" />
        <activity
            android:name=".TopWordsActivity"
            android:label="Top Words" />
    </application>

</manifest>